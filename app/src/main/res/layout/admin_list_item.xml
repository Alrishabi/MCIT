<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/cardview_default_radius">

        <RelativeLayout
            android:id="@+id/linearL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_shadow_end_color"
            android:padding="10dp">

            <ImageView
                android:id="@+id/circleView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/youtube" />


                <TextView
                    android:id="@+id/AdmintextViewHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Heading"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_alignTop="@+id/circleView"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@+id/circleView"/>

                <TextView
                    android:id="@+id/AdmintextViewDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Broadcast type"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@+id/circleView"/>

                <TextView
                    android:id="@+id/AdmintextViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    android:text="Date"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="60dp"
                    android:layout_toRightOf="@+id/circleView"/>

                <ImageView
                    android:id="@+id/edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_action_edit"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/x_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_action_delete"
                    android:layout_alignBottom="@+id/AdmintextViewDate"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>